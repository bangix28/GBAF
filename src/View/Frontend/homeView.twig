{% block head %}
    <title>Acceuil du gbaf </title>
{% endblock %}
{% block content %}
    <header class="col-lg-12 mb-5">
        {{ include('layout/header.twig') }}
    </header>
    <section class="col-lg-12">
        <div class="col-lg-12 p-lg-5">
            <hr class="half-rule"/>
        </div>
        <div class="col-12">
            <h1 class="leads text-center">Site du GBAF !</h1>
