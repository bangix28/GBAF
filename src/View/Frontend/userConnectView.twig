{% extends 'layout.twig' %}
{% block head %}
<title>Connexion au site du GBAF !</title>
{% endblock %}
{% block content %}
    <section class="p-5">
        <form method="POST" action="index.php?access!connect">
                <div class="form-group row p-4">
                <div class="form-group offset-4 col-5 text-center">
                    <label for="username">Pseudo</label>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Pseudo">
                </div>
                <div class="form-group offset-4 col-5 text-center">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password">
                </div>
                    <div class=" offset-4 col-6">
                <button type="submit" class="btn btn-primary">Se connecter</button>
                    </div>
                    <div class="col-12">
                        <p class="lead" style="color: red;">{{ message }}</p>
                    </div>
                    <div class="col-12">
                        <p class="lead text-center"><a href="index.php?access=register">S'inscrire !</a></p>
                        <p class="lead text-center"><a href="index.php?access=recoverPassword">Changer de mot de passe</a></p>
                    </div>
                </div>
        </form>
    </section>
{% endblock %}

